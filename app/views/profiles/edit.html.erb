<h1>Editar perfil</h1>

<%= form_for(@profile, url: profile_path, html: { method: :put, multipart: true }) do |f| %>
  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>
  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>
  <div>
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :profile_picture, 'Imagen de perfil' %>
    <%= f.file_field :profile_picture %>
  </div>
  <div>
    <%= f.submit 'Actualizar perfil' %>
  </div>
<% end %>

<%= link_to 'Volver al perfil', profile_path(current_user) %>

